.bar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50px;
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  padding-bottom: env(safe-area-inset-bottom);
}

.bar__item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.bar__img {
  width: 24px;
  height: 24px;
  margin-bottom: 2px;
}

.bar__text {
  font-size: 12px;
}

.bar__active > .bar__text {
  color: #487271;
}